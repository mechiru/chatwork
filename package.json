    "@vercel/ncc": "^0.24.1",
    "eslint": "^7.11.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.1.0",
    "jest-circus": "^26.6.0",
    "jest": "^26.6.0",
    "js-yaml": "^3.14.0",
